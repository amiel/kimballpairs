<%= form_for @submission, html: { role: 'form' } do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation" class="row">
      <div class="span12">
        <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

        <ul>
        <% @submission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group span4">
      <%= f.label :name, 'Your name' %>
      <%= f.text_field :name %>

      <%= f.label :words %>
      <%= f.text_field :words, required: true %>
    </div>

    <div class="form-group span7">
      <%= f.label :rationale %>
      <%= f.text_area :rationale, rows: 5, cols: 56 %>
    </div>
  </div>

  <div class="actions row">
    <div class="span12">
      <%= f.submit 'Submit for approval' %>
    </div>
  </div>
<% end %>
